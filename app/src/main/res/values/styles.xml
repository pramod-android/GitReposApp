<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="style_textview">
        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>
    <style name="style_textview_bold">
        <item name="android:layout_marginStart">@dimen/view_margin</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:layout_marginEnd">@dimen/view_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

</resources>
